<div class="modal inmodal fade" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
			<form method="post" action="{{ path('app_home_selection_add') }}">
				<input type="hidden" name="orderId" value="{{ orderId }}">
				<input type="hidden" name="postId" value="">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fermer</span></button>
                    <h4 class="modal-title">SÃ©lectionner un article</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
						{% for post in posts %}
							<div data-postId="{{ post.id }}" class="col-md-3 m-t-sm m-b-sm">
								<a name="myPostSelection">
									<img src="{{ asset(post_directory ~ '/' ~ post.image) }}" class="img-responsive">
								</a>
							</div>
						{% endfor %}
					</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Annuler</button>
                </div>
            </form>
        </div>
    </div>
	<script>
		$(function(){
			$('[name="myPostSelection"]').click(function(){
				var $form = $(this).closest('form');
				var postId = $(this).closest('[data-postId]').attr('data-postId');
				$form.find('[name="postId"]').val(postId);
				$form.submit();
			});
		});
	</script>
</div>