<div class="modal inmodal fade" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
			<form method="post" action="{{ path('app_post_publish') }}">
				<input type="hidden" name="id" value="{{ post.id }}">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fermer</span></button>
                    <h4 class="modal-title">Publier l'article</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
						<div class="form-group">
							<label class="control-label">Date de publication</label>
							<input type="date" name="publishedAt" class="form-control" value="{{ post.publishedAt|date('Y-m-d') }}">
						</div>
					</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Publier</button>
                </div>
            </form>
        </div>
    </div>
</div>