{% extends 'base_web.html.twig' %}

{% block slider %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<img src="{{ asset(post_directory ~ '/' ~ post.image) }}" class="img-responsive">
			</div>
		</div>
	</div>
{% endblock %}

{% block article %}
	<div class="single-blog-details">
		<span class="tag">{{ post.category.label }}</span>
		<h1 class="post-title">{{ post.title }}</h1>
		<p class="post-date">Publi√© le {{ post.publishedAt|date('d/m/Y') }}</p>
		<div class="post-long-desc">{{ post.content|raw }}</div>
		{#
		<div class="single-blog-bottom fix">
			<div class="post-social-links pull-left">
				<p>
					<span class="lbl">Partagez sur&nbsp;&nbsp;-</span>
					<span>
						<a href="#"><i class="fa fa-facebook"></i></a>
						<a href="#"><i class="fa fa-twitter"></i></a>
						<a href="#"><i class="fa fa-google-plus"></i></a>
						<a href="#"><i class="fa fa-pinterest"></i></a>
					</span>
				</p>
			</div>
			<div class="post-tags pull-right">
				<p>
